name: diabetes-prediction-model

conda_env: conda.yaml

entry_points:
    main:
        parameters:
            data: { type: str, default: "../dataset_preprocessing/diabetes_preprocessed.csv" }
            min_accuracy: { type: float, default: 0.70 }
        command: "python modelling.py --data {data} --min-accuracy {min_accuracy}"

    train:
        parameters:
            data: { type: str, default: "../dataset_preprocessing/diabetes_preprocessed.csv" }
            min_accuracy: { type: float, default: 0.70 }
        command: "python modelling.py --data {data} --min-accuracy {min_accuracy}"
